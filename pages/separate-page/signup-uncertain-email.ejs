<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../common/head', {title: title}); %>
</head>
<body>
<div class="container main mt-5">
    <%- include('../common/go-to-home'); %>
    <div class="row">
        <div class="col-sm mt-5">
            <form class="js-submit" method="post" action="/submit">
                <h2>Login</h2>
                <div class="form-group">
                    <label for="exampleInputEmailOrUsername1">Email or username</label>
                    <input type="text" class="form-control" id="exampleInputEmailOrUsername1"
                           placeholder="Enter email or username">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="gridCheck1">
                        <label class="form-check-label" for="gridCheck1">
                            Check me out
                        </label>
                    </div>
                </div>
                <button type="submit" id="login" class="btn btn-primary">Login</button>
            </form>
        </div>
    </div>
</div>

</body>
</html>

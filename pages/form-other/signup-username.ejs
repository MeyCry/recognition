<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../common/head', {title: title}); %>

</head>
<body>
<div class="container main mt-5">
    <%- include('../common/go-to-home'); %>

    <div class="row">
        <div class="col-sm mt-5">
            <form class="js-submit" method="post" action="/submit">
                <h2>Other</h2>
                <div class="form-group row">
                    <div class="col">
                        <input type="text" class="form-control col" id="customer-name" name="customerName"
                               placeholder="Name">
                    </div>
                    <div class="col">
                        <input type="text" class="form-control col" id="customer-surname" name="customerSurname"
                               placeholder="Surname">
                    </div>
                </div>
                <div class="form-group">
                    <label for="customer-email">Username</label>
                    <input type="text" name="email" class="form-control" id="customer-email"
                           placeholder="Enter username">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword2">Password</label>
                    <input type="password" name="password" class="form-control" id="exampleInputPassword2"
                           placeholder="Password">
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="gridCheck3">
                        <label class="form-check-label" for="gridCheck3">
                            Check me out
                        </label>
                    </div>
                </div>
                <button type="submit" id="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

</body>
</html>
